<body>

    <section class="menu container mx-auto py-8">
        <h1 class="text-4xl font-bold mb-8 text-center">All Menus</h1>
        <h1 class="mt-8 mb-3 text-2xl font-semibold" style="color:#f51f1f;">South Indian </h1>
        <div class="owl-carousel owl-theme grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16" >
           
            <% menus.forEach(function(food) { %>
         <% if (food.subCategory == 'South Indian') { %>
          
       
             
         

         
            <div class="item w-full md:w-64 border border-gray-300 py-5 pt-2 shadow-md">
                <img class="h-40 mb-4 mx-auto w-full px-2 object-cover hovering" src="<%= food.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-xl"><%= food.name %></h2>
                 
                    <div class="flex items-center justify-around ">
                        <span class="font-bold text-lg">₹<%= food.price %></span>
                        <button data-pizza="<%= JSON.stringify(food) %>"
                            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
            
            <% } %>
            <% }) %>
    
    
            
    
        </div>
    
    
    
